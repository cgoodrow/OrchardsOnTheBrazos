@model OrchardsOnTheBrazos.Models.Directory
<div class="modal fade" id="create" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title">Add Directory Document</h4>
                @Html.Raw(TempData["Errormsg"])
            </div>
            @using (Html.BeginForm("Create", "Directory", FormMethod.Post, new { enctype = "multipart/form-data", id = "Create" }))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Files:
                            </label>
                            <div class="col-md-10">
                                <label class="file-upload">
                                    <input type="file" name="file" multiple="multiple" />
                                </label>
                            </div>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" /> | @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
