@model IEnumerable<OrchardsOnTheBrazos.Models.Announcements>
<div class="col-lg-12 center-block no-gutters">
    <h2 class="text-center">Announcements</h2>
</div>
<div class="col-lg-12 no-gutters info">
    <div class="panel">
        @foreach (var item in Model)
        {
            <div class="panel-heading">
                @Html.DisplayFor(modelItem => item.Date)
            </div>
            <div class="panel-body">
                <div class="info-box">
                    <h5>@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p>@Html.DisplayFor(modelItem => item.Announcement)</p>
                    <p>
                        @if (User.IsInRole("Board Member") || User.IsInRole("Administrator"))
                        {
                            <a data-toggle="modal" data-target="#modalCreate" class="adminActions btn btn-primary" onclick="RenderActions('/Announcements/Edit/' + @item.Id)">Edit</a>
                            <span>|</span>
                            <a data-toggle="modal" data-target="#modalCreate" class="adminActions btn btn-default" onclick="RenderActions('/Announcements/Details/' + @item.Id)">Details</a>
                            <span>|</span>
                            <a data-toggle="modal" data-target="#modalCreate" class="adminActions btn btn-danger" onclick="RenderActions('/Announcements/Delete/' + @item.Id)">Delete</a>
                        }
                    </p>
                </div>
            </div>
        }
    </div>
</div>


