@model OrchardsOnTheBrazos.Models.Announcements
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Delete Announcement</h4>
</div>
<div className="modal-body">
    <div class="row">
        <div class="col-md-12">
            <h3>Are you sure you want to delete this?</h3>
            <strong>@Html.DisplayNameFor(model => model.Title)<span>:</span></strong>
            @Html.DisplayFor(model => model.Title)
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayNameFor(model => model.Date)<span>:</span></strong>
            @Html.DisplayFor(model => model.Date)
        </div>
        <div class="col-md-12">
            <strong>@Html.DisplayNameFor(model => model.Announcement)<span>:</span></strong> @Html.DisplayFor(model => model.Announcement)
        </div>
    </div>
</div>
<div class="modal-footer">
    @using (Html.BeginForm("Delete", "Announcements", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

