@model OrchardsOnTheBrazos.Models.Announcements

@{
    ViewBag.Title = "Details";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Details</h4>
</div>
<div class="modal-body">
    <div>
        <div class="row">
            <div class="col-md-12">
                <strong>@Html.DisplayNameFor(model => model.Title)<span>:</span></strong>
                @Html.DisplayFor(model => model.Title)
            </div>
            <div class="col-md-12">
                <strong>@Html.DisplayNameFor(model => model.Date)<span>:</span></strong>
                @Html.DisplayFor(model => model.Date)
            </div>
            <div class="col-md-12">
                <strong>@Html.DisplayNameFor(model => model.Announcement)<span>:</span></strong> @Html.DisplayFor(model => model.Announcement)
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a data-target="#createModal" class="btn btn-primary btn-sm" onclick="RenderActions('/Announcements/Edit/' + @Model.Id)">Edit</a> |
    @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-default" })
</div>
