@model OrchardsOnTheBrazos.Models.Events
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Event Details</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <strong>@Html.DisplayNameFor(model => model.EventName)</strong><br />
            @Html.DisplayFor(model => model.EventName)
        </div>
        <div class="col-md-12">
            <strong>
                @Html.DisplayNameFor(model => model.EventDate)<br/>
                @Html.DisplayFor(model => model.EventDate)
            </strong>
         </div>
        <div class="col-md-12">
            <strong>@Html.DisplayNameFor(model => model.EventPost)</strong><br />
            @Html.DisplayFor(model => model.EventPost)
        </div>
        <div class="col-md-12">
            <img src="@Url.Content("~/Content/Temp/" + Model.EventPicture)" class="img-responsive" />
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="form-group">
        <button data-toggle="modal" data-target="#modalCreate" type="button" class="btn btn-primary btn-sm" onclick="RenderActions('/Events/Edit/@Model.EventId')">Edit</button> | @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>


