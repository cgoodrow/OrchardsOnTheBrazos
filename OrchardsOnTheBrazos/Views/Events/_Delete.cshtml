@model OrchardsOnTheBrazos.Models.Events
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Delete Post</h4>
</div>
<div class="modal-body">
    <h3>Are you sure you want to delete this?</h3>
    <div class="row">
        <div class="col-md-12">
            <strong>@Html.DisplayNameFor(model => model.EventName)</strong><br />
            @Html.DisplayFor(model => model.EventName)
        </div>
        <div class="col-lg-12">
            <strong>
                @Html.DisplayNameFor(model => model.EventDate)<br />
            @Html.DisplayFor(model => model.EventDate)
        </strong>
    </div>
    <div class="col-md-12">
        <strong>@Html.DisplayNameFor(model => model.EventPost)</strong><br />
        @Html.DisplayFor(model => model.EventPost)
    </div>
    <div class="col-md-12">
        <img src="@Url.Content("~/Content/Temp/" + Model.EventPicture)" class="img-responsive" />
    </div>
</div>
</div>
<div class="modal-footer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

