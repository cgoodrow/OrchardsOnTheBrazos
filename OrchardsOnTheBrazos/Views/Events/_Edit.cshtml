@model OrchardsOnTheBrazos.Models.Events
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Edit Event</h4>
    @Html.Raw(TempData["Errormsg"])
</div>
@using (Html.BeginForm("Edit", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.EventId)
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.EventName, htmlAttributes: new { @class = "control-label " })
                    @Html.EditorFor(model => model.EventName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.EventDate, new { @class = "control-label " })
                        @Html.TextBoxFor(model => model.EventDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.EventDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.EventPost, htmlAttributes: new { @class = "control-label " })
                        @Html.TextAreaFor(model => model.EventPost, new { @class = "form-control text-area" })
                        @Html.ValidationMessageFor(model => model.EventPost, "", new { @class = "text-danger" })
                    </div>
                </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.EventPicture, htmlAttributes: new { @class = "control-label " })
                        @Html.TextBoxFor(model => model.EventPicture, htmlAttributes: new { @class = "", type = "file" })
                    </div>
                </div>
            </div>
        <div class="modal-footer">
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Save" class="btn btn-primary" /> | @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>

}


