@model IEnumerable<OrchardsOnTheBrazos.Event>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventPicture)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventPost)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.EventPicture)*@
                <img src="@Url.Content("~/Content/Images/")@item.EventPicture" class="img-responsive" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.EventId }) |
                @Html.ActionLink("Details", "Details", new { id=item.EventId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.EventId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
