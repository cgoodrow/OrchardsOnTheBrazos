@model OrchardsOnTheBrazos.Models.Events
<div class="modal fade" id="eventCreate" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create Event</h4>
            </div>
            @using (Html.BeginForm("Create", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.EventName, new { @class = "control-label " })
                                @Html.EditorFor(model => model.EventName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.EventDate, new { @class = "control-label " })
                                @Html.TextBoxFor(model => model.EventDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(model => model.EventDate, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.EventPost, htmlAttributes: new { @class = "control-label " })
                                    @Html.TextAreaFor(model => model.EventPost, new { @class = "form-control text-area", required = "required" })
                                    @Html.ValidationMessageFor(model => model.EventPost, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.EventPicture, htmlAttributes: new { @class = "control-label " })
                                <input id="EventPicture" type="file" name="EventPicture" />
                            </div>
                        </div>
                        </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" value="Create" class="btn btn-primary">Create</button> <span>|</span>     @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


